{
    "cmake.configureOnOpen": true,
    "cmake.useCMakePresets": "always",
    "cmake.environment": {
        "VCPKG_ROOT": "${env:HOME}/vcpkg"
    },
    "clangd.path": "/opt/homebrew/opt/llvm/bin/clangd",
    "clangd.arguments": [
        "--background-index",
        "--compile-commands-dir=${workspaceFolder}/build",
        "--clang-tidy",
        "--header-insertion=iwyu",
        "-j=4"
    ]
}